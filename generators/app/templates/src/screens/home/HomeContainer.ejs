import React, { Component } from 'react';
import { connect } from 'react-redux';
<%_ if (features.drawerandroid || features.drawerios) { _%>
import { Button } from 'react-native';
<%_ } _%>

import { actionCreators as authActions } from '../../redux/authHandlers';
<%_ if (features.drawerandroid || features.drawerios) { _%>
import { actionCreators as drawerActions } from '../../redux/drawerHandlers';
<%_ } _%>
import Home from './Home';

class HomeContainer extends Component {
  static navigationOptions = {
    <%_ if (features.drawerandroid || features.drawerios) { _%>
    header: ({ dispatch }) => ({
      right: <Button onPress={() => dispatch(drawerActions.drawerToggled())} title="Drawer" />
    }),
    <%_ } _%>
    title: 'Home'
  };

  handleLogout = () => {
    this.props.dispatch(authActions.logout());
  };

  render() {
    return <Home onLogout={this.handleLogout} />;
  }
}

export default connect()(HomeContainer);
